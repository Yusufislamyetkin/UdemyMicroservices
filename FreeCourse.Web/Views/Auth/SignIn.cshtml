
@{
    ViewData["Title"] = "SignIn";
}
@model FreeCourse.Web.Models.Input.SigninInput

<div class="row">
    <div class="col-md-4 offset-md-5>
        <div class="card-body">
            <h5 class="card-title">Üye Girişi</h5>
            <div asp-validation-summary="ModelOnly"></div>
            <form asp-controller="Auth" asp-action="SignIn" method="post">
                <div class="mb-3">
                    <label asp-for="Email" for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span class="text-danger" asp-validation-for="Email" > </span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" for="exampleInputPassword1" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1">
                    <span class="text-danger" asp-validation-for="Password"> </span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="IsRemember" type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label asp-for="IsRemember" class="form-check-label" for="exampleCheck1">Beni hatırla</label>
                </div>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </div>
    </div>
</div>

